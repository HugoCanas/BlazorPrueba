@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Kontagailua</h1>

<p role="status">Kontaketa: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Klikatu</button>
<button class="btn btn-primary" @onclick="DecreaseCount">Klikatu</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecreaseCount()
    {
        currentCount--;
    }
}
